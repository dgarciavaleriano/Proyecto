@model ProyectoFinal.Models.ModeloGenerico
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SOMU - Música Social</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <style type="text/css">
        #nombre {
            color: white;
        }

            #nombre:hover {
                color: white;
                text-decoration: none;
            }

            #nombre:visited {
                color: white;
            }

        footer {
            background-color: #555;
            color: white;
            padding: 15px;
        }
    </style>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="container body-content">
        <div class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("SOMU", "Index", "Login", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <form method="POST" action="/Buscador/Index" style="padding: 11px 15px;">
                                <input type="search" name="Busqueda" />
                                <input type="submit" value="Buscar" />
                            </form>
                        </li>
                        @if (Session["identificado"] != null)
                        {
                            if (((bool)Session["identificado"]))
                            {
                                <li ><a class="navbar-brand" href="/DatosUsuarios/Index/@((int)Session["id"])">@((string)Session["nombre"])</a></li>
                                <li><a href="/Login/CerrarSesion/" class="navbar-brand">Cerrar Sesión</a></li>
                            }
                            else
                            {
                                <li><a href="/Login/Index/@((int)Session["id"])" class="navbar-brand">Identificate</a></li>
                            }
                        }
                        else
                        {
                            <li><a href="/Login/Index/" class="navbar-brand">Identificate</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>


        @RenderBody()
        <hr />


        <footer class="container-fluid text-center">
            <p>SOMU - 2016</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/proyecto.js"></script>
</body>
</html>