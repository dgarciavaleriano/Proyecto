@model ProyectoFinal.Models.Login.SuscripcionBandaModelo

@{
    ViewBag.Title = "Suscripción Banda";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2>Suscripción Banda</h2>

        <form method="POST" action="@Url.Action("SuscripcionDB", "Login")">
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" placeholder="Email" name="Email" />
                <label>Password</label>
                <input type="password" class="form-control" placeholder="Password" name="Password" />
                <label>Nombre</label>
                <input type="text" class="form-control" placeholder="Nombre" name="Nombre" />
                <label>Estilo</label>
                <select class="form-control" name="Estilo">

                    @foreach (var estilo in Model.Estilos)
            {
                if (estilo == ProyectoFinal.Models.Enum.Estilo.SinEstilo)
                {
                            <option value="0">Elige un estilo de música...</option>
                        }
                        else
                        {
                            <option value="@estilo">@estilo</option>
                        }

                    }
                </select>
                <label>Ciudad</label>
                <input class="form-control" type="text" placeholder="Ciudad" name="Ciudad" />
                <label>País</label>
                <input class="form-control" type="text" placeholder="País" name="Pais" />
                <input type="hidden" name="Tipo" value="@Model.Tipo" />
            </div>
            <input type="submit" class="btn btn-default" value="Alta" />
        </form>
    </div>
    <div class="col-md-4"></div>
</div>





